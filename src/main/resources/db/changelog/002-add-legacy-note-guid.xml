<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="002-add-legacy-note-guid" author="developer">

        <!-- Добавляем поле для хранения GUID из старой системы -->
        <addColumn tableName="patient_note">
            <column name="legacy_note_guid" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Добавляем уникальный индекс -->
        <addUniqueConstraint
                tableName="patient_note"
                columnNames="legacy_note_guid"
                constraintName="uk_patient_note_legacy_guid"/>

        <!-- Добавляем обычные индексы для производительности -->
        <createIndex tableName="patient_profile" indexName="idx_patient_profile_status">
            <column name="status_id"/>
        </createIndex>

        <createIndex tableName="patient_profile" indexName="idx_patient_profile_old_client_guid">
            <column name="old_client_guid"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>